number=int(input('enter a number'))
check=int(input('enter a number for check'))
if number%4==0:
    print('number is divisible by 4')
elif number%2==0:
    print('number is even')
else:
    print('number is odd')

if number%check==0:
    print('the number divides evenly')
else:
    print('the number is not divided evenly')
